{
    "name": "rust-ms",
    "image": "mcr.microsoft.com/devcontainers/rust",
    "init": true,
    "customizations": {
        "vscode": {
            "settings": {
                "[rust]": {
                    "editor.formatOnSave": true,
                    "editor.formatOnPaste": true
                },
                "rust-analyzer.checkOnSave": true,
                "rust-analyzer.check.command": "clippy"
            },
            "extensions": []
        }
    }
}
